<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Sandbox: required for App Store; keep minimal permissions for privacy-first design -->
    <key>com.apple.security.app-sandbox</key>
    <true/>

    <!-- Allow outgoing network connections to call Spotify Web API -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Incoming network connections are needed for the tiny local callback listener used during PKCE auth.
        Enable this for development so the app can bind to 127.0.0.1:8888 and capture the OAuth callback. -->
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- Not enabling file access or broad entitlements here; use App Sandbox and Application Support for cache files. -->
</dict>
</plist>
